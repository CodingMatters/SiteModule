{
    "name": "codingmatters/site-module-ini",
    "description": "Initial Site Module for ZF application",
    "license": "MIT",
    "type": "zend-module",
    "keywords": ["ZF module"],
    "homepage": "https://github.com/CodingMatters/SiteModule/",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "gamba@gabbydgab.com",
            "homepage": "http://www.gabbydgab.com/"  
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "composer/installers": "~1.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-mvc": "^3.0"
    },
    "require-dev": {        
        "zendframework/zend-test": "^3.0",
        "squizlabs/php_codesniffer": "^2.3",
        "phpbench/phpbench": "^0.11",
        "filp/whoops": "^2.0"
    },
    "autoload": {        
        "psr-4": {
            "Site\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SiteTest\\": "test/"
        }
    },
    "extra": {        
        "zf": {
            "module": "Site",
            "config-provider": "Site\\ConfigProvider"
        }
    },
    "scripts": {
        "post-install-cmd"  : [            
            "@check"
        ],
        "post-update-cmd"   : [            
            "@check"
        ],
        "check": [
            "@test",
            "@cs" 
        ],
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
